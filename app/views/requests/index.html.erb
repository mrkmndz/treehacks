<table>
    <tr>
        <th>Requester</th>
        <th>email</th>
    </tr>

    <% @requests.each do |request| %>
        <tr>
            <td><%= request.requester %></td>
            <td><%= request.email %></td>
            <td><%= request.id %></td>
            <td><%= link_to 'Remove', controller: "requests", action: "destroy", id: request.id %></td>
        </tr>
    <% end %>
</table>

